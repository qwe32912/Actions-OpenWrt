# ==========================================
# 1. 目标机型：雅典娜 (AX6600)
# ==========================================
CONFIG_TARGET_ipq60xx=y
CONFIG_TARGET_ipq60xx_generic=y
CONFIG_TARGET_ipq60xx_generic_DEVICE_jdcloud_ax6600=y
CONFIG_TARGET_ipq60xx_generic_DEVICE_jdcloud_re-cs-07=y

# ==========================================
# 2. 核心功能：Docker 全家桶 (必选)
# ==========================================
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_fuse-overlayfs=y

# ==========================================
# 3. 依赖修复与增强 (防止运行报错)
# ==========================================
# 确保 Docker 能够正常运行的内核模块
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_kmod-ipt-extra=y

# ==========================================
# 4. 常用工具 (推荐)
# ==========================================
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_nginx_max_client_body_size=1024
